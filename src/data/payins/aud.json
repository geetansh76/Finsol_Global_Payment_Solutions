  "payments": {
    "encryption": {
      "heading": "Encryption & Decryption",
      "lead": "All sensitive data in requests and responses must be encrypted/decrypted using AES-256-CBC.",
      "steps": ["Create a Request Object: Form a JSON object with the required parameters (e.g., for /v3/pay-request)."],
      "requestExampleJson": {
        "amount": "10.00",
        "currency": "AUD",
        "order_id": "8783193",
        "pay_mode": "AUAT",
        "sub_pay_mode": "BSB",
        "merchant_id": "UMZ0VEHTT03DH",
        "beneficiary": {
          "bank_acc_no": "083028",
          "name": "TestTest",
          "email": "test@test.com",
          "mobile": "610430467999",
          "address": "55street99",
          "city": "SouthManhaten",
          "pincode": "1234",
          "bsb": "987654321",
          "state": "MyState",
          "country": "AUS"
        }
      },
      "stringifyExample": "encrypt_str={\"amount\":\"10.00\"~\"currency\":\"AUD\"~\"order_id\":\"8783193\"~\"pay_mode\":\"AUAT\"~\"sub_pay_mode\":\"BSB\"~\"merchant_id\":\"UMZ0VEHTT03DH\"~\"beneficiary\":{ \"bank_acc_no\":\"083028\",\"name\":\"Test Test\",\"email\":\"test@test.com\",\"mobile\":\"610430467999\",\"address\":\"55 street 99\",\"city\":\"South Manhaten\",\"pincode\":\"1234\",\"bsb\":\"987654321\",\"state\":\"My State\",\"country\":\"AUS\"}}",
      "opensslExampleEncrypt": "openssl enc -aes-256-cbc -in plaintext.txt -out encrypted_data.bin -K [YOUR_32_CHAR_KEY] -iv [YOUR_16_CHAR_IV]",
      "finalRequestJson": { "mid": "iA************zo", "data": "FEZQmxMXriEFA5Og..." },
      "exampleJson": { "mid": "iA************zo", "data": "fMrCfhtikCMj5SY3+HyH..." },
      "decryptNotes": [
        "IV: first 16 chars of Secret Key",
        "Key: next 32 chars of Secret Key",
        "Decrypt with AES-256-CBC"
      ],
      "opensslExampleDecrypt": "openssl enc -d -aes-256-cbc -in encrypted_data.txt -out decrypted_data.txt -K <key> -iv <iv>"
    },




    
