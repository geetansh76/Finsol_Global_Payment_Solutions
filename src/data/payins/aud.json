"parameters": [
  {
    "title": "Request Parameters",
    "columns": ["Parameter","Data Type","Description","Min/Max Value","Required"],
    "rows": [
      { "Parameter": "amount",        "Data Type": "Number",        "Description": "Amount to be received from the payer",                                    "Min/Max Value": "3-10",  "Required": "Yes" },
      { "Parameter": "currency",      "Data Type": "Character",     "Description": "Currency Code as per ISO 4217 standard",                                   "Min/Max Value": "3",     "Required": "Yes" },
      { "Parameter": "pay_mode",      "Data Type": "Character",     "Description": "pay_mode refers to the method used for processing a payment",              "Min/Max Value": "2-4",   "Required": "Yes" },
      { "Parameter": "sub_pay_mode",  "Data Type": "Character",     "Description": "It specifies the exact method used for the payment",                       "Min/Max Value": "2-4",   "Required": "Yes" },
      { "Parameter": "merchant_id",   "Data Type": "Alpha Numeric", "Description": "A unique Id shared by Swipelocal",                                         "Min/Max Value": "15-18", "Required": "Yes" },
      { "Parameter": "order_id",      "Data Type": "Alpha Numeric", "Description": "Merchant unique reference id Hyphen & underscore allowed",                  "Min/Max Value": "2-50",  "Required": "Yes" },
      { "Parameter": "cust_name",     "Data Type": "Character",     "Description": "Name of the customer, only in English alphabets",                           "Min/Max Value": "2-50",  "Required": "Yes" },
      { "Parameter": "cust_email",    "Data Type": "Email format",  "Description": "Customer Email",                                                             "Min/Max Value": "6-20",  "Required": "Yes" },
      { "Parameter": "return_url",    "Data Type": "URL Format",    "Description": "Your return_url",                                                            "Min/Max Value": "6-50",  "Required": "Yes" },
      { "Parameter": "cust_phone",    "Data Type": "Number",        "Description": "Customer phone number, with county code but without + sign",                 "Min/Max Value": "8-13",  "Required": "Yes" },
      { "Parameter": "hash",          "Data Type": "Alpha Numeric", "Description": "SHA-256 results in a 64-character hash",                                     "Min/Max Value": "64",    "Required": "Yes" },
      { "Parameter": "cust_country",  "Data Type": "Character",     "Description": "Customer country",                                                           "Min/Max Value": "3-30",  "Required": "Yes" },
      { "Parameter": "remarks",       "Data Type": "Alpha Numeric", "Description": "Remarks for your reference",                                                 "Min/Max Value": "3-50",  "Required": "No"  },
      { "Parameter": "udf1",          "Data Type": "String",        "Description": "Remarks for your reference",                                                 "Min/Max Value": "3-50",  "Required": "No"  },
